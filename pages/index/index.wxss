/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  position: relative;
  overflow: hidden;
}

.header {
  padding: 80rpx 40rpx 60rpx 40rpx;
  text-align: center;
  position: relative;
  z-index: 10;
}

.title-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.main-title {
  font-size: 64rpx;
  font-weight: 700;
  background: linear-gradient(45deg, #ffffff 0%, #f0f8ff 50%, #ffffff 100%);
  background-size: 200% 200%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
  animation: title-glow 3s ease-in-out infinite alternate;
  position: relative;
}

.main-title::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  background-size: 200% 200%;
  animation: title-shimmer 4s ease-in-out infinite;
  pointer-events: none;
}

@keyframes title-glow {
  0% { 
    background-position: 0% 50%;
    filter: drop-shadow(0 0 20rpx rgba(255, 255, 255, 0.5));
  }
  100% { 
    background-position: 100% 50%;
    filter: drop-shadow(0 0 30rpx rgba(255, 255, 255, 0.8));
  }
}

@keyframes title-shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  animation: subtitle-fade 2s ease-in-out infinite alternate;
}

@keyframes subtitle-fade {
  0% { opacity: 0.8; }
  100% { opacity: 1; }
}

.function-cards {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  position: relative;
  z-index: 10;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20px);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.card:active::before {
  left: 100%;
}

.action-card {
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.card-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.card-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: icon-shimmer 3s ease-in-out infinite;
}

@keyframes icon-shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  50% { transform: translateX(0%) translateY(0%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.icon {
  font-size: 48rpx;
  position: relative;
  z-index: 1;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.2;
}

.card-desc {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.3;
}

.card-arrow {
  width: 48rpx;
  height: 48rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.card:active .card-arrow {
  background: rgba(102, 126, 234, 0.2);
  transform: translateX(8rpx);
}

.arrow {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
  transition: all 0.3s ease;
}

/* 手动加入房间弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
}

.join-modal {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  animation: modal-slide-up 0.3s ease;
}

@keyframes modal-slide-up {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #e1e5e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  background: none;
  border: none;
  font-size: 48rpx;
  color: #718096;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.modal-close:active {
  color: #2d3748;
  transform: scale(0.9);
}

.modal-content {
  padding: 40rpx;
}

.input-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.room-input {
  background: #f7fafc;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.room-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input-hint {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

.modal-actions {
  padding: 32rpx 40rpx;
  border-top: 1rpx solid #e1e5e9;
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-primary:disabled {
  background: #e2e8f0;
  color: #a0aec0;
}

.btn-secondary {
  background: #f7fafc;
  color: #2d3748;
  border: 2rpx solid #e1e5e9;
}

.btn-secondary:active {
  background: #e2e8f0;
}