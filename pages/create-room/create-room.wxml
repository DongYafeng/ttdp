<!--create-room.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="header">
    <view class="title-container">
      <text class="main-title">选择游戏</text>
      <text class="subtitle">选择您要玩的游戏类型</text>
    </view>
  </view>

  <!-- 游戏类型选择 -->
  <view class="game-types">
    <view 
      wx:for="{{gameTypes}}" 
      wx:key="index" 
      class="game-card {{selectedGameIndex === index ? 'selected' : ''}}"
      bindtap="selectGame"
      data-index="{{index}}"
    >
      <view class="game-icon">
        <text class="icon">{{item.icon}}</text>
      </view>
      <view class="game-content">
        <text class="game-title">{{item.name}}</text>
        <text class="game-desc">{{item.desc}}</text>
      </view>
      <view wx:if="{{selectedGameIndex === index}}" class="selected-indicator">
        <text class="check-icon">✓</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="actions">
    <button class="btn-secondary cancel-btn" bindtap="goBack">
      返回
    </button>
  </view>

  <!-- 装饰元素 -->
  <view class="decoration">
    <view class="floating-element element-1"></view>
    <view class="floating-element element-2"></view>
  </view>
</view>