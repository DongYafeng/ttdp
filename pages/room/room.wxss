/* room.wxss */

/* 弹窗动画 */
@keyframes modal-slide-up {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

.room-header {
  margin-top: 0;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  display: block;
  margin-bottom: 8rpx;
}

.room-details {
  font-size: 28rpx;
  color: #718096;
}

.room-actions {
  display: flex;
  gap: 16rpx;
}

.btn-share {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 32rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-share::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.btn-share:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-share:active::before {
  left: 100%;
}

.share-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
}

.share-icon {
  font-size: 24rpx;
  line-height: 1;
}

.share-text {
  font-weight: 600;
  letter-spacing: 1rpx;
}

.players-section, .history-section {
  margin: 32rpx 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.title-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.player-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx 32rpx 48rpx 32rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  position: relative;
  border: 2rpx solid transparent;
  margin-bottom: 32rpx;
}

.player-card:active {
  transform: scale(0.98);
}

.current-player {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.2);
}

.player-avatar-container {
  position: relative;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: center;
  width: 96rpx;
  height: 96rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50% !important;
  overflow: hidden !important;
}

.player-avatar {
  width: 100%;
  height: 100%;
  min-width: 96rpx;
  min-height: 96rpx;
  max-width: 96rpx;
  max-height: 96rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
  object-fit: cover;
  object-position: center center;
  display: block;
  background: #f7fafc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  opacity: 1;
}

.player-avatar:not([src]),
.player-avatar[src=""] {
  opacity: 0.7;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.player-info {
  text-align: center;
}

.player-name-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  min-height: 40rpx;
}

.player-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.host-badge {
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  z-index: 10;
}

.score-container {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin-top: -24rpx;
}

.score-label {
  display: none;
}

.score-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-top: -16rpx;
}

.score-value.positive {
  color: #e53e3e;
}

.score-value.negative {
  color: #38a169;
}

.score-value.zero {
  color: #718096;
}

.select-indicator {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(102, 126, 234, 0.9);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.select-text {
  font-size: 20rpx;
  font-weight: 600;
  color: inherit;
}

.history-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  overflow: hidden;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.history-item:last-child {
  border-bottom: none;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-text {
  font-size: 28rpx;
  color: #2d3748;
}

.history-time {
  font-size: 24rpx;
  color: #718096;
}

.history-score {
  font-size: 32rpx;
  font-weight: 700;
}

.empty-history {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 60rpx;
  text-align: center;
  backdrop-filter: blur(10px);
}

.empty-text {
  font-size: 28rpx;
  color: #718096;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 40rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.bottom-bar .btn-primary {
  padding: 24rpx 60rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.bottom-bar .btn-secondary {
  padding: 24rpx 60rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 整体分享弹窗优化 */
.share-modal {
  background: white;
  border-radius: 32rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  max-height: 85vh;
  box-shadow: 
    0 32rpx 64rpx rgba(0, 0, 0, 0.15),
    0 16rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.share-modal .modal-header {
  padding: 40rpx 40rpx 24rpx 40rpx;
  border-bottom: 1rpx solid #e1e5e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  position: relative;
}

.share-modal .modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e1e5e9, transparent);
}

.share-modal .modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
}

.share-modal .modal-close {
  background: rgba(113, 128, 150, 0.1);
  border: none;
  font-size: 36rpx;
  color: #718096;
  padding: 8rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  transition: all 0.3s ease;
}

.share-modal .modal-close:active {
  color: #2d3748;
  background: rgba(113, 128, 150, 0.2);
  transform: scale(0.9);
}

.share-content {
  padding: 32rpx 40rpx 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 房间信息卡片优化 */
.room-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  color: white;
  margin-bottom: 0;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
}

.room-card-details {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.room-detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  text-align: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  flex: 1;
  min-width: 0;
  transition: all 0.3s ease;
}

.room-name-item {
  flex: 1.5;
}

.room-detail-item:hover {
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-2rpx);
}

.detail-label {
  font-size: 26rpx;
  opacity: 0.9;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  margin-bottom: 2rpx;
}

.detail-value {
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  word-break: break-all;
  line-height: 1.3;
}

.status-active {
  color: #68d391 !important;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 二维码区域优化 */
.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
  padding: 0;
  gap: 16rpx;
}

.qr-container {
  position: relative;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 
    0 16rpx 32rpx rgba(102, 126, 234, 0.12),
    0 6rpx 12rpx rgba(102, 126, 234, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  margin: 0 auto;
  width: fit-content;
}

.qr-container:hover {
  transform: translateY(-2rpx);
  box-shadow: 
    0 20rpx 40rpx rgba(102, 126, 234, 0.15),
    0 8rpx 16rpx rgba(102, 126, 234, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

/* 官方小程序码样式 */
.official-qr-image {
  display: block;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 6rpx 16rpx rgba(0, 0, 0, 0.1),
    0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  background: #ffffff;
}

/* 本地二维码包装器 */
.local-qr-wrapper {
  position: relative;
}

.qr-canvas {
  display: block;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 6rpx 16rpx rgba(0, 0, 0, 0.1),
    0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

/* 二维码类型标识 */
.qr-type-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.qr-type-text {
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.qr-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  z-index: 10;
}

.qr-logo {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 6rpx 16rpx rgba(102, 126, 234, 0.4),
    0 3rpx 6rpx rgba(102, 126, 234, 0.2);
  border: 3rpx solid white;
  position: relative;
  overflow: hidden;
}

.qr-logo::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.logo-text {
  color: white;
  font-size: 22rpx;
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

/* 分享提示优化 */
.share-tips {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-top: 0;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 14rpx;
  padding: 6rpx 0;
}

.tip-icon {
  font-size: 26rpx;
  line-height: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  box-shadow: 0 3rpx 6rpx rgba(102, 126, 234, 0.25);
}

.tip-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.4;
  font-weight: 500;
  flex: 1;
}

/* 分享弹窗底部操作优化 */
.share-actions {
  padding: 28rpx 40rpx 36rpx 40rpx;
  border-top: 1rpx solid #e1e5e9;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
}

.share-btn {
  width: 100%;
  padding: 28rpx 24rpx;
  border-radius: 18rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 
    0 6rpx 16rpx rgba(102, 126, 234, 0.3),
    0 3rpx 6rpx rgba(102, 126, 234, 0.2);
  position: relative;
  overflow: hidden;
}

.share-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 3rpx 8rpx rgba(102, 126, 234, 0.4),
    0 1rpx 3rpx rgba(102, 126, 234, 0.3);
}

.share-btn:active::before {
  left: 100%;
}

/* 计分弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
}

.score-modal {
  background: white;
  border-radius: 32rpx;
  width: 100%;
  max-width: 500rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.modal-content {
  padding: 60rpx 40rpx 40rpx 40rpx;
}

.score-input-section {
  margin-bottom: 0;
}

.score-input {
  width: 100%;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  font-size: 48rpx;
  text-align: center;
  font-weight: 700;
  box-sizing: border-box;
  height: 120rpx;
  line-height: 1.2;
  color: #2d3748;
  transition: all 0.3s ease;
}

.score-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
  background: white;
}

.score-input::placeholder {
  color: #a0aec0;
  font-size: 32rpx;
  font-weight: 500;
}

.modal-actions {
  padding: 40rpx;
  border-top: none;
  display: flex;
  gap: 0;
}

/* 单个按钮样式 */
.modal-btn-single {
  width: 100%;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn-single:active {
  transform: translateY(3rpx);
  box-shadow: 0 3rpx 12rpx rgba(102, 126, 234, 0.4);
}

.modal-btn-single:disabled {
  background: #e2e8f0;
  color: #a0aec0;
  box-shadow: none;
  transform: none;
}

/* 编辑用户信息弹窗样式 */
.edit-modal {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 680rpx;
  min-width: 580rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: modal-slide-up 0.3s ease;
  margin: 0 20rpx;
}

.edit-modal .modal-header {
  padding: 48rpx 40rpx 24rpx 40rpx;
  border-bottom: 1rpx solid #e1e5e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.edit-modal .modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
}

.edit-modal .modal-close {
  background: rgba(113, 128, 150, 0.1);
  border: none;
  font-size: 36rpx;
  color: #718096;
  padding: 8rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  transition: all 0.3s ease;
}

.edit-modal .modal-close:active {
  color: #2d3748;
  background: rgba(113, 128, 150, 0.2);
  transform: scale(0.9);
}

.edit-modal .modal-content {
  padding: 56rpx 40rpx 40rpx 40rpx;
  overflow-y: auto;
  max-height: calc(80vh - 220rpx);
}

/* 头像选择区域 */
.avatar-section {
  margin-bottom: 56rpx;
  text-align: center;
  padding: 0 20rpx;
}

.avatar-section .input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 32rpx;
  text-align: left;
}

.avatar-selector {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
  position: relative;
}

.avatar-btn {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: none;
  padding: 0;
  background: transparent;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar-btn:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

/* 头像图片动画 */
.edit-avatar {
  width: 100%;
  height: 100%;
  min-width: 200rpx;
  min-height: 200rpx;
  max-width: 200rpx;
  max-height: 200rpx;
  border-radius: 50%;
  object-fit: cover;
  object-position: center center;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 1;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: inset 0 0 0 1rpx rgba(0, 0, 0, 0.05);
}

.avatar-btn:active .edit-avatar {
  transform: translate(-50%, -50%) scale(0.98);
}

.edit-avatar:not([src]),
.edit-avatar[src=""],
.edit-avatar[src="/images/default-avatar.svg"] {
  background: linear-gradient(135deg, #f7fafc 0%, #e2e8f0 100%);
  border: 2rpx dashed #cbd5e0;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6));
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 50%;
  backdrop-filter: blur(6rpx);
}

.avatar-btn:hover .avatar-overlay,
.avatar-btn:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
  letter-spacing: 1rpx;
  text-align: center;
  line-height: 1.2;
}

.avatar-section .input-hint {
  font-size: 26rpx;
  color: #718096;
  margin-top: 24rpx;
  display: block;
  text-align: center;
  line-height: 1.5;
  opacity: 0.8;
}

